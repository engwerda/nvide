{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "dockerfile",
    "elixir",
    "html",
    "htmldjango",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "python",
    "scss",
    "sh",
    "toml",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml"
  ],
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  "diagnostic.refreshOnInsertMode": true,
  "codeLens.enable": true,
  "yank.highlight.duration": 300,
  // Python
  "pyright.enable": true,
  "python.linting.enabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ruffEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.ruffPath": "~/.local/bin/ruff",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "pyright.organizeimports.provider": "isort",
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.testing.provider": "pytest",
  "ruff.enable": true,
  "ruff.autoFixOnSave": false,
  // Django
  "htmldjango.formatting.provider": "djhtml",
  "htmldjango.djhtml.tabWidth": 2,
  "htmldjango.djlint.enableLint": true,
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "htmldjango": "html"
  },
  "html-css-support.enabledLanguages": [
    "html",
    "vue",
    "blade",
    "htmldjango",
    "typescriptreact",
    "javascriptreact"
  ],
  "html-css-support.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
  ],
  "elixir.pathToElixirLS": "/usr/bin/elixir-ls",
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.headwind.runOnSave": true,
  "languageserver": {
    "sourcery": {
      "command": "/home/simon/.local/bin/sourcery",
      "args": ["lsp"],
      "filetypes": ["python"],
      "initializationOptions": {
        "extension_version": "coc.vim",
        "editor_version": "vim"
      },
      "settings": {
        "sourcery": {
          "metricsEnabled": false
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    }
  },
  "Lua.telemetry.enable": false,
  "cSpellExt.enableDictionaries": ["dutch"],
  "cSpell.language": "en,nl",
  "cSpell.enabledLanguageIds": [
    "csharp",
    "go",
    "html",
    "javascript",
    "javascriptreact",
    "latex",
    "lua",
    "mail",
    "markdown",
    "norg",
    "org",
    "php",
    "python",
    "restructuredtext",
    "rsweave",
    "text",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.userWords": [
    "Exercism",
    "Moonlander",
    "Nakharin",
    "Pytest",
    "noqa",
    "ntasset"
  ]
}
