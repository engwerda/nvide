{
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "markdown",
    "javascript",
    "json",
    "html",
    "css",
    "scss",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "vue",
    "yaml",
    "toml",
    "dockerfile",
    "sh",
    "lua",
    "htmldjango"
  ],
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],
  "diagnostic.refreshOnInsertMode": true,
  "codeLens.enable": true,
  "yank.highlight.duration": 300,
  "pairs.enableCharacters": [
    "(",
    "[",
    "{",
    "'",
    "\"",
    "`"
  ],
  // Python
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "pyright.organizeimports.provider": "isort",
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.testing.provider": "pytest",
  //Django
  "htmldjango.formatting.provider": "djhtml",
  "htmldjango.djhtml.tabWidth": 2,
  "htmldjango.djhtml.commandPath": "/home/simon/.local/bin/djhtml",
  "htmldjango.djlint.enableLint": true,
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "htmldjango": "html"
  },
  "html-css-support.enabledLanguages": [
    "html",
    "vue",
    "blade",
    "htmldjango",
    "typescriptreact",
    "javascriptreact"
  ],
  "html-css-support.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
  ],
  "languageserver": {
    "sourcery": {
      "command": "/home/simon/.local/bin/sourcery",
      "args": [
        "lsp"
      ],
      "filetypes": [
        "python"
      ],
      "initializationOptions": {
        "extension_version": "coc.vim",
        "editor_version": "vim"
      },
      "settings": {
        "sourcery": {
          "metricsEnabled": false
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "sql": {
      "command": "sql-language-server",
      "args": [
        "up",
        "--method",
        "stdio"
      ],
      "filetypes": [
        "sql",
        "mysql"
      ]
    }
  },
  "Lua.telemetry.enable": false
}
